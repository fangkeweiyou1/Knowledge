<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.module_specialview">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        >

        <activity android:name=".SpecialActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            />
        <activity android:name=".MarqueeActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <receiver android:name=".SpecialBroadCastReciver">
            <intent-filter>
                <action android:name="open_specialactivity"/>
            </intent-filter>
        </receiver>


    </application>

</manifest>
