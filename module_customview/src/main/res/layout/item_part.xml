<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_udrl1"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="1"
        android:textColor="#222"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_udrl2"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="1"
        android:textColor="#222"
        android:textSize="14sp"/>

    <com.module_customview.widget.MoveHorizontalScrollView
        android:id="@+id/mhsv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:background="#eee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_udrl3"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textColor="#222"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_udrl4"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textColor="#222"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_udrl5"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textColor="#222"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_udrl6"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textColor="#222"
                android:textSize="14sp"/>
        </LinearLayout>
    </com.module_customview.widget.MoveHorizontalScrollView>

    <TextView
        android:id="@+id/tv_udrl7"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="1"
        android:textColor="#222"
        android:textSize="14sp"/>

</LinearLayout>